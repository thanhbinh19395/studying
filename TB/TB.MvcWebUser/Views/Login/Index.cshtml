
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="container" style="margin-top: 0px;">
    <nav class="breadcrumbs"> <a href="#">Home</a> <span class="divider">›</span> Account Login </nav>
</section>

<section class="container">
    <div class="row">
        <section class="col-sm-6 col-md-6 col-lg-6">
            <section class="container-with-large-icon login-form">
                <div class="large-icon"><img src="images/large-icon-user.png" alt=""></div>
                <div class="wrap">
                    <h3>NEW CUSTOMER</h3>
                    <p>By creating an account you will be able to shop faster, be up to date on an order's status, and keep track of the orders you have previously made.</p>
                    <br>
                    <button class="btn btn-mega" onclick="location.href='#';">CONTINUE</button>
                </div>
            </section>
        </section>
        <section class="col-sm-6 col-md-6 col-lg-6">
            <section class="container-with-large-icon login-form">
                <div class="large-icon"><img src="images/large-icon-lock.png" alt=""></div>
                <div class="wrap">
                    <h3>RETURNING CUSTOMER</h3>
                    <form action="#" id="form-returning">
                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" class="form-control" id="email">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password">
                        </div>
                        <div class="form-link"> <a href="#">Forgot Your Password?</a> </div>
                        <button type="submit" class="btn btn-mega" onclick="document.getElementById('form-returning').submit();">Login</button>
                    </form>
                </div>
            </section>
        </section>
    </div>
</section>
